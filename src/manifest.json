{
  "name": "Responsivfy Helper",
  "description": "Enable advanced features while using Responsivfy.com",
  "version": "1.2",
  "manifest_version": 3,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "256": "icon256.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://localhost/*",
        "*://responsivfy.com/*",
        "*://*.responsivfy.com/*"
      ],
      "all_frames": false,
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": ["declarativeNetRequest", "webNavigation"],
  "host_permissions": ["<all_urls>"],
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://responsivfy.com/*",
      "*://*.responsivfy.com/*"
    ]
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules_1.json"
      }
    ]
  }
}
